#!/bin/sh
#
# ~/.xinitrc
#
# Executed by startx (run your window manager from here)

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi
[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources
# exec gnome-session
# exec startkde
# ...or the Window Manager of your choice
#exec herbstluftwm -- :0

xset +fp /usr/share/fonts/local
xset fp rehash

xsetroot -cursor_name left_ptr
hsetroot -fill '/home/ethan/usr/pictures/bwbCross.jpg'

case $WM in
		openbox			)exec openbox-session;;
		bspwm			)exec sxhkd -c "/home/ethan/etc/bspwm/sxhkd/sxhkdrc" & exec bspwm -c "/home/ethan/etc/bspwm/bspwm/bspwmrc";;
		xmonad			)exec dbus-launch xmonad;;
		herbstluftwm    )exec herbstluftwm;;
    	2bwm            )2bwm & exec urxvt;;
		awesome			)exec awesome;;
		dwm 			)exec dwm;;
		*			)exec sxhkd -c "/home/ethan/etc/bspwm/sxhkdrc" -f 100 & exec bspwm -c "/home/ethan/etc/bspwm/bspwmrc";;
esac

#/home/ethan/bin/startdwm &
