# vim: set ft=sxhkdrc:


#
# spawn programs
#

mod4 + Return
	urxvt

mod4 + r
	dmenu_run -y 6 -h 20 -nb black -nf white -sb white -sf black

mod4 + shift + n
	xterm

Print
	scrot -q 100

#
# Media keys
#

XF86AudioRaiseVolume
	amixer set Master 5%+

XF86AudioLowerVolume
	amixer set Master 5%-

XF86AudioMute
	 amixer set Master 0%

XF86Sleep
	pm-suspend

XF86AudioPlay
	mpc toggle

XF86AudioNext
	mpc next

XF86AudioPrev
	mpc prev
#
# Media Key Alternatives
#

mod4 + F3
	amixer set Master 5%+

mod4 + F2
	amixer set Master 5%-

mod4 + F1
	amixer set Master 0%

mod4 + F9
	pm-suspend

mod4 + F5
	mpc play

mod4 + F6
	mpc toggle

mod4 + F7
	mpc next

mod4 + F8
	mpc prev

# make sxhkd reload its configuration files:
mod4 + shift + Escape
	pkill -USR1 -x sxhkd
